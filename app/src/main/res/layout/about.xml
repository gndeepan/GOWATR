<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="@drawable/about"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/close"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginTop="20dp"
			android:background="@android:color/transparent"
			android:src="@drawable/ic_close_white_20200908085328_20201127211503"
			android:scaleType="fitCenter"
			android:layout_gravity="left" />
		<LinearLayout
			android:id="@+id/linear32"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/thitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal"
				android:text="About us"
				android:textSize="20sp"
				android:textColor="#37474F"
				android:layout_gravity="center_horizontal|center_vertical" />
		</LinearLayout>
		<com.airbnb.lottie.LottieAnimationView
			android:id="@+id/lottie1"
			android:layout_width="300dp"
			android:layout_height="250dp"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:layout_centerInParent="true"
			app:lottie_fileName="your_file.json"
			app:lottie_loop="true"
			app:lottie_autoPlay="true" />
		<TextView
			android:id="@+id/textview2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="GoWatr is the #1 water suppliers in Chennai. We aim to ease the existing water delivery problem through a well-organized delivery system to residences, high-rise apartments and business institutions.\n\nOur mission is to create an innovative and efficient water delivery system via digital platform. At GoWatr, we have designed a model that ensures on-time delivery of water to ease the stress customers undergo, by removing the many hurdles that were prevalent in the existing water delivery process.\n\nOur business model provides tremendous value proposition for our partners and Gowatr is strongly committed to furthering their prospects. Our partners enjoy assured trips, increased earnings and other significant benefits."
			android:textSize="14sp"
			android:textColor="#807699" />
	</LinearLayout>
</LinearLayout>
